<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.child_fragments.ListadoReuniones">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- En este RecyclerVuiew se cargaran las reuniones registradas en la base de datos
            hasta un maximo de 10, si se quieren cargar mas el elemento 11 debera ser un campo que
            funcione como boton "cargar mas"-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvReuniones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


            </android.support.v7.widget.RecyclerView>

            <!--Estos botones serviran para las acciones "notificar, borrar, otra necesaria.
             Si se necesita ocultar uno u otro se puede hacer,. ademas si solo se ocupan 2 botones
              se debe eliminar el codigo del otro-->
            <Button
                android:id="@+id/btnAccion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accion1"
                android:layout_below="@+id/rvReuniones"/>
            <Button
                android:id="@+id/btnAccion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accion2"
                android:layout_below="@+id/rvReuniones"/>
            <Button
                android:id="@+id/btnAccion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accion3"
                android:layout_below="@+id/rvReuniones"/>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>